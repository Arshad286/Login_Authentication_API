{
  "compilerOptions": {
    "target": "ES6",                        // Set the JavaScript version
    "module": "commonjs",                   // Specify module code generation
    "rootDir": "./src",                     // Root directory of the project
    "outDir": "./dist",                     // Output directory for compiled code
    "esModuleInterop": true,                // Enable interoperability between CommonJS and ES Modules
    "strict": true,                         // Enable strict type-checking
    "skipLibCheck": true,                   // Skip type checks for libraries
    "moduleResolution": "node",             // Resolve modules using Node.js
    "resolveJsonModule": true               // Support importing JSON files
  },
  "include": ["src/**/*.ts"],               // Include all .ts files under src
  "exclude": ["node_modules"]               // Exclude node_modules
}
